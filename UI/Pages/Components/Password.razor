<MudTextField T="string" @attributes="Attributes" InputType="@InputType" 
        Adornment="Adornment.End" AdornmentIcon="@InputIcon" OnAdornmentClick="ChangeVisibility"/>

@code {

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? Attributes { get; set; }

    bool showPassword;
    InputType InputType = InputType.Password;
    string InputIcon = Icons.Material.Filled.VisibilityOff;


    void ChangeVisibility()
    {
        showPassword = !showPassword;
        @if (showPassword)
        {
            InputIcon = Icons.Material.Filled.Visibility;
            InputType = InputType.Text;
        }
        else
        {
            InputIcon = Icons.Material.Filled.VisibilityOff;
            InputType = InputType.Password;
        }
    }
}